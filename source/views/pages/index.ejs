<!-- views/pages/index.ejs -->

<% layout('../layouts/base') -%>

    <div class="container">
        <div class="row">

            <div class="col-12">

                <h1>Generador de QRs</h1>

                <div class="d-flex justify-content-end">
                    <a class="btn btn-primary" href="/create" role="button">Nuevo QR</a>
                </div>


            </div>

            <div class="col">



                <table class="table table-dark table-hover mt-5">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Nombre</th>
                            <th scope="col">Apellido</th>
                            <th scope="col">ver</th>

                        </tr>
                    </thead>
                    <% vcards.forEach(function(vcard,index) { %>

                        <tbody>
                            <tr>
                                <th scope="row">
                                    <%- index + 1 %>
                                </th>
                                <td>
                                    <%- vcard.firstname %>
                                </td>
                                <td>
                                    <%- vcard.lastname %>
                                </td>
                                <td><a class="btn btn-primary" href="/<%- vcard.slug %>" role="button">Ver</a>
                                </td>
                            </tr>
                        </tbody>


                        <% }); %>
                </table>



            </div>

            <% vcards.forEach(function(vcard,index) { %>

                <div class="col">



                    <div class="card">
                        <div class="head">
                            <div class="circle"></div>
                            <div class="img">
                                <img src="https://images.unsplash.com/photo-1493666438817-866a91353ca9?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1049&q=80"
                                    alt="">
                            </div>
                        </div>

                        <div class="description">
                            <h3>
                                <%- vcard.firstname %>
                            </h3>
                            <h4>
                                <%- vcard.job %>
                            </h4>

                            <h4>
                                <%- vcard.firstname %>
                            </h4>

                            <h4>
                                <%- vcard.lastname %>
                            </h4>

                            <h4>
                                <%- vcard.email %>
                            </h4>




                        </div>

                        <div class="contact">
                            <a href="#">Contact</a>
                        </div>
                    </div>

                </div>

                <% }); %>
        </div>
    </div>